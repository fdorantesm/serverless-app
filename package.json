{
  "name": "serverless-app",
  "version": "1.0.0",
  "description": "A simple serverless application with InversifyJS",
  "scripts": {
    "clean": "rimraf dist",
    "build:ts": "tsc --project tsconfig.build.json",
    "build:alias": "tsc-alias",
    "build": "npm-run-all clean build:ts build:alias",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint --fix \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest --config jest.config.json",
    "deploy": "sls deploy",
    "deploy:fn": "sls deploy function --function",
    "start": "sls offline --stage local",
    "start:dev": "nodemon --config .nodemon.json"
  },
  "keywords": [
    "serverless",
    "inversify",
    "typescript",
    "middy"
  ],
  "author": "Fernando Dorantes <fernando@dorant.es>",
  "license": "ISC",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "inversify": "^6.0.2",
    "middy": "^0.36.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/inversify": "^2.0.33",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^5.0.5",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.5.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.5.3"
  }
}
